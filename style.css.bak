* {
    font-family: 'Roboto', sans-serif;
    list-style: none;
    text-decoration: none;
}

.logo {
    max-width: 190px;
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.flex {
    display: flex;
    align-items: center;
    justify-content: center;
}

.column {
    flex-direction: column;
}

.row {
    flex-direction: row;
}

.rounded{
    position: absolute;
    color: #fff;
    width: 1.8rem;
    height: 1.8rem;
    background-color: #9356DC;
    border-radius: 100%;
}

.light-grey{
    background-color: #E9EAEA;
}

.margin-right{
    margin-right: 1rem;
}

.btn-main{
    padding: 1rem 2rem;
    border-radius: 5rem;
    background: linear-gradient(350deg, rgba(147,86,220,1) 31%, rgba(255,121,218,1) 100%);
}

#btn-link{
    color: #fff;
    font-weight: 400;
}